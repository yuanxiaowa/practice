
shadow(size, blur, color)
	box-shadow size size blur color, 0 0 size lighten(color, 5%)

/*-------- range input reset start --------*/

input_range()
	$track-color = #42
	$thumb-color = #555bc8
	
	$thumb-radius = 8px
	$thumb-height = 30px
	$thumb-width = 30px
	$thumb-shadow-size = 1px
	$thumb-shadow-blur = 1px
	$thumb-shadow-color = #1
	$thumb-border-width = 1px
	$thumb-border-color = #f
	
	$track-width = 100%
	$track-height = 10px
	$track-shadow-size = 2px
	$track-shadow-blur = 2px
	$track-shadow-color = #2
	$track-border-width = 1px
	$track-border-color = #0
	
	$track-radius = 5px
	$contrast = 5%
	
	track()
		width $track-width
		height $track-height
		cursor pointer
		animate .3s
	thumb()
		shadow $thumb-shadow-size $thumb-shadow-blur $thumb-border-color
		border $thumb-border-width solid $thumb-border-color
		height $thumb-height
		width $thumb-width
		border-radius $thumb-radius
		background $thumb-color
		cursor pointer
	
	input[type=range]
		-wekbit-appearance none // Hides the slider so that custom slider can be made
		width $track-width // Specific width is required for Firefox.
		margin ($thumb-height / 2) 0
		&::-webkit-slider-runnable-track
			track 0
			shadow $track-shadow-size $track-shadow-blur $track-border-color
			background $track-color
			border-radius $track-radius
			border $track-border-width solid $track-border-color
		&::-moz-range-track
			track 0
			shadow $track-shadow-size $track-shadow-blur $track-border-color
			background $track-color
			border-radius $track-radius
			border $track-border-width solid $track-border-color
		&::-webkit-slider-thumb
			-wekbit-appearance none
			thumb 0
			margin-top ((- $track-border-width * 2 + $track-height) / 2) - ($thumb-height / 2)
		&::moz-range-thumb
			thumb 0
		&::-ms-thumb
			thumb 0
		&:focus
			&::-webkit-slider-runnable-track
				background lighten($track-color, $contrast)
			&::-ms-fill-lower
				background $track-color
			&::-ms-fill-upper
				background lighten($track-color, $contrast)
		&::-ms-track
			track 0
			background transparent
			border-color transparent
			border-width $thumb-width 0
			color transparent
		&::-ms-fill-lower
			background darken($track-color, $contrast)
			border $track-border-width solid $track-border-color
			border-radius $track-radius * 2
			shadow $track-shadow-size $track-shadow-blur $track-border-color
		&::-ms-fill-upper
			background $track-color
			border $track-border-width solid $track-border-color
			border-radius $track-radius * 2
			shadow $track-shadow-size $track-shadow-blur $track-border-color

/*-------- range input reset end --------*/